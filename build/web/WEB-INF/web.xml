<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	 version="3.0">
 
        <servlet>
            <servlet-name>GolfDeviceUserController</servlet-name>
            <servlet-class>controller.GolfDeviceUserController</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>GolfDeviceUserController</servlet-name>
            <url-pattern>/GolfDeviceUserController</url-pattern>
        </servlet-mapping>    
       
        <servlet>
            <servlet-name>GolfUserController</servlet-name>
            <servlet-class>controller.GolfUserController</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>GolfUserController</servlet-name>
            <url-pattern>/GolfUserController</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>GolfStatsController</servlet-name>
            <servlet-class>controller.GolfStatsController</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>GolfStatsController</servlet-name>
            <url-pattern>/GolfStatsController</url-pattern>
        </servlet-mapping>        
                    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
